@{
    ViewBag.Title = "Candidates";
}

<script src="//code.jquery.com/jquery-1.9.1.js"></script>
<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css">
<script>
    $(function () {
        $("#tabs").tabs();
    });
</script>

<div class="row-fluid">
    <div class="span10 offset1 panel panel-primary">
        <div class="panel-heading">
            <h2 class="panel-title">Basic Candidate Information</h2>
        </div>
        <div class="row-fluid">
            <!-- First column, name etc-->
            <div class="span4 panel-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="first-name" class="control-label span5">First Name</label>
                        <div class="span7">
                            <input type="text" class="form-control span11" name="first-name" id="first-name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="middle-name" class="control-label span5">Middle Name</label>
                        <div class="span7">
                            <input type="text" class="form-control span11" name="middle-name" id="middle-name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="last-name" class="control-label span5">Last Name</label>
                        <div class="span7">
                            <input type="text" class="form-control span11" name="last-name" id="last-name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="ssn" class="control-label span5">SSN</label>
                        <div class="span7">
                            <input type="text" class="form-control span11" name="ssn" id="ssn" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="suffix" class="control-label span5">Suffix</label>
                        <div class="span7">
                            <input type="text" class="form-control span11" name="suffix" id="suffix" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="fyg" class="control-label span5">Fiscal Year Group</label>
                        <div class="span7">
                            <input type="text" class="form-control span11" name="fyg" id="fyg" />
                        </div>
                    </div>
                </form>
            </div>
            <!-- Second column, date of birth, gender, etc-->
            <div class="span4 panel-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="date-of-birth" class="control-label span4">Date of Birth</label>
                        <div class="span8">
                            <input type="date" class="form-control span12" name="date-of-birth" id="date-of-birth" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="gender" class="control-label span4">Gender</label>
                        <div class="span8">
                            <select id="gender" name="gender">
                                <option value="M">M</option>
                                <option value="F">F</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="ethnicity" class="control-label span4">Ethnicity</label>
                        <div class="span8">
                            <select id="ethnicity" name="ethnicity">
                                <option value="caucasian">Caucasian</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="source" class="control-label span4">Source</label>
                        <div class="span8">
                            <select id="source" name="source">
                                <option value="NROTC">NROTC</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="subsource" class="control-label span4">SubSource</label>
                        <div class="span8">
                            <select id="subsource" name="subsource">
                                <option value="NROTC">NROTC</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="programs" class="control-label span4">Programs</label>
                        <div class="span8">
                            <select id="programs" name="programs" multiple>
                                <option value="NROTC">Officer</option>
                                <option value="NROTC">Officer</option>
                                <option value="NROTC">Officer</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Third column, ACT/SAT scores-->
            <div class="span4 panel-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="ACTM" class="control-label span4">ACT Math</label>
                        <div class="span8">
                            <input type="text" class="form-control span10" name="ACTM" id="ACTM" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="ACTV" class="control-label span4">ACT Verbal</label>
                        <div class="span8">
                            <input type="text" class="form-control span10" name="ACTV" id="ACTV" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="SATM" class="control-label span4">SAT Math</label>
                        <div class="span8">
                            <input type="text" class="form-control span10" name="SATM" id="SATM" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="SATV" class="control-label span4">SAT Verbal</label>
                        <div class="span8">
                            <input type="text" class="form-control span10" name="SATV" id="SATV" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- School information block-->
    <div class="row-fluid">
        <div class="span10 offset1 panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">School Information</h2>
            </div>
            <div class="row-fluid">
                <div class="row-fluid span4 panel-body">
                    <div class="span8">
                        <select name="schoolsAttended" multiple class="span12">
                            <option value="UofW">University of Wisconsin</option>
                            <option value="CalTech">California Technical Institute</option>
                        </select>
                    </div>
                    <div class="row-fluid span4">
                        <button class="span12">&ltAdd</button>
                        <button class="span12">Update</button>
                        <button class="span12">Remove&gt</button>
                    </div>
                </div>
                <!--Second column of school info block-->
                <div class="row-fluid span8 panel-body">
                    <div class="span6">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="school-name" class="control-label span3">School</label>
                                <div class="span8">
                                    <select id="school-name" name="school-name" class="span10">
                                        <option value="NAU">Northern Arizona University</option>
                                        <option value="UofA">University of Arizona</option>
                                        <option value="UofW">University of Wisconsin</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="year-start" class="control-label span3">Start Year</label>
                                <div class="span4">
                                    <input type="text" class="form-control span10" name="year-start" id="year-start" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="year-end" class="control-label span3">End Year</label>
                                <div class="span4">
                                    <input type="text" class="form-control span10" name="year-end" id="year-end" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="major" class="control-label span3">Major</label>
                                <div class="span6">
                                    <input type="text" class="form-control span10" name="major" id="major" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="graduated" class="control-label span3">Graduated?</label>
                                <div class="span2">
                                    <select id="graduated" name="graduated" class="span12">
                                        <option value="T">Yes</option>
                                        <option value="F">No</option>
                                    </select>
                                </div>
                                <label for="degreeType" class="control-label span3">Degree</label>
                                <div class="span2">
                                    <select id="degreeType" name="degreeType" class="span12">
                                        <option value="na">N/A</option>
                                        <option value="BA">B.A.</option>
                                        <option value="BS">B.S.</option>
                                        <option value="MS">M.S.</option>
                                        <option value="MA">M.A.</option>
                                        <option value="PhD">PhD</option>
                                    </select>

                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="span5">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="GPA" class="control-label span3">GPA</label>
                                <div class="span4">
                                    <input type="text" class="form-control span12" name="GPA" id="GPA" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="AOM" class="control-label span3">AOM</label>
                                <div class="span4">
                                    <input type="text" class="form-control span12" name="AoM" id="AOM" />
                                </div>
                                <label for="of_AOM" class="control-label span1">of</label>
                                <div class="span4">
                                    <input type="text" class="form-control span12" name="of_AOM" id="of_AOM" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="OOM" class="control-label span3">OOM</label>
                                <div class="span4">
                                    <input type="text" class="form-control span12" name="OOM" id="OOM" />
                                </div>
                                <label for="of_OOM" class="control-label span1">of</label>
                                <div class="span4">
                                    <input type="text" class="form-control span12" name="of_OOM" id="of_OOM" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inMajor" class="control-label span3">Rank in Major</label>
                                <div class="span4">
                                    <input type="text" class="form-control span12" name="inMajor" id="inMajor" />
                                </div>
                                <label for="of_inMajor" class="control-label span1">of</label>
                                <div class="span4">
                                    <input type="text" class="form-control span12" name="of_inMajor" id="of_inMajor" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row-fluid span12">
                    <label for="comments" class="control-label span4">Comments:</label>
                    <div class="span8">
                        <form method="post" action="">
                            <textarea name="comments" id="comments" class="span11" rows="3" style="resize:vertical">Enter your comments here...</textarea><br>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Class information block-->
    <div class="row-fluid">
        <div class="span10 offset1 panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Class Information</h2>
            </div>
            <div id="tabs">
                <ul>
                    <li><a href="#tabs-1">University of Arizona</a></li>
                    <li><a href="#tabs-2">Ohio State University</a></li>
                </ul>
                <div id="tabs-1">
                    <div class="row-fluid">
                        <div class="row-fluid span4 panel-body">
                            <div class="span8">
                                <select name="classesAttended" multiple class="span12">
                                    <option value="ECE 175">ECE 175 - Intro to C</option>
                                    <option value="Math 243">Math 243 - Discrete Math</option>
                                </select>
                            </div>
                            <div class="row-fluid span4">
                                <button class="span12">&ltAdd</button>
                                <button class="span12">Update</button>
                                <button class="span12">Remove&gt</button>
                            </div>
                        </div>
                        <div class="row-fluid span8 panel-body">
                            <div class="span5 row-fluid">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label for="subject" class="control-label span4">Subject</label>
                                        <div class="span8">
                                            <input type="text" class="form-control span5" name="subject" id="subject" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="courseNum" class="control-label span4">Course #</label>
                                        <div class="span8">
                                            <input type="text" class="form-control span5" name="courseNum" id="courseNum" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="technical" class="control-label span4">Technical?</label>
                                        <div class="span8">
                                            <select id="technical" name="technical" class="span5">
                                                <option value="T">Yes</option>
                                                <option value="F">No</option>
                                            </select>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="span7">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label for="title" class="control-label span6">Informal Class Title (optional)</label>
                                        <div class="span6">
                                            <input type="text" class="form-control span10" name="title" id="title" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tabs-2">
                    <div class="row-fluid">
                        <div class="row-fluid span4 panel-body">
                            <div class="span8">
                                <select name="classesAttended" multiple class="span12">
                                    <option value="ECE 175">ECE 275 - Advanced C</option>
                                    <option value="Math 243">Math 243 - Discrete Math</option>
                                </select>
                            </div>
                            <div class="row-fluid span4">
                                <button class="span12">&ltAdd</button>
                                <button class="span12">Update</button>
                                <button class="span12">Remove&gt</button>
                            </div>
                        </div>
                        <div class="row-fluid span8 panel-body">
                            <div class="span5 row-fluid">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label for="subject" class="control-label span4">Subject</label>
                                        <div class="span8">
                                            <input type="text" class="form-control span5" name="subject" id="subject" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="courseNum" class="control-label span4">Course #</label>
                                        <div class="span8">
                                            <input type="text" class="form-control span5" name="courseNum" id="courseNum" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="technical" class="control-label span4">Technical?</label>
                                        <div class="span8">
                                            <select id="technical" name="technical" class="span5">
                                                <option value="T">Yes</option>
                                                <option value="F">No</option>
                                            </select>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="span7">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label for="title" class="control-label span6">Informal Class Title (optional)</label>
                                        <div class="span6">
                                            <input type="text" class="form-control span10" name="title" id="title" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Duty history information block-->
    <div class="row-fluid">
        <div class="span10 offset1 panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Duty History Information</h2>
            </div>
            <div class="row-fluid">
                <div class="span12 panel-body row-fluid">
                    <form class="form-horizontal">
                        <div class="form-inline">
                            <label for="branch" class="control-label span1">Branch</label>
                            <div class="span2">
                                <select id="branch" name="branch" class="span11">
                                    <option value="AF">Air Force</option>
                                    <option value="Army">Army</option>
                                    <option value="Navy">Navy</option>
                                    <option value="USMC">USMC</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-inline">
                            <label for="rank" class="control-label span1">Rank</label>
                            <div class="span2">
                                <input type="text" class="form-control span11" name="rank" id="rank" />
                            </div>
                        </div>
                        <div class="form-inline">
                            <label for="rate" class="control-label span1">Rating</label>
                            <div class="span2">
                                <input type="text" class="form-control span11" name="rate" id="rate" />
                            </div>
                        </div>
                        <div class="form-inline">
                            <label for="nuc" class="control-label span2">Prior NUC</label>
                            <div class="span1">
                                <select id="nuc" name="nuc" class="span11">
                                    <option value="T">Yes</option>
                                    <option value="F">No</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="row-fluid span4 panel-body">
                    <div class="span8">
                        <select name="dutyStations" multiple class="span12">
                            <option value="DS1">Duty Station One</option>
                            <option value="DS2">Duty Station Two</option>
                        </select>
                    </div>
                    <div class="row-fluid span4">
                        <button class="span12">&ltAdd</button>
                        <button class="span12">Update</button>
                        <button class="span12">Remove&gt</button>
                    </div>
                </div>
                <div class="row-fluid span7 panel-body">
                    <div class="span6 row-fluid">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="reportDate" class="control-label span4">Report Date</label>
                                <div class="span8">
                                    <input type="date" class="form-control span10" name="reportDate" id="reportDate" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="departDate" class="control-label span4">Depart Date</label>
                                <div class="span8">
                                    <input type="date" class="form-control span10" name="departDate" id="departDate" />
                                </div>
                            </div>
                        </form>
                        <label for="duties" class="control-label span3">Duties:</label>
                        <div class="span8">
                            <form method="post" action="">
                                <textarea name="comments" id="comments" class="span12" rows="3" style="resize:vertical">Describe duties...</textarea><br>
                            </form>
                        </div>
                    </div>
                    <div class="span6">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="rankOverall" class="control-label span4">Overall Rank</label>
                                <div class="span3">
                                    <input type="text" class="form-control span10" name="rankOverall" id="rankOverall" />
                                </div>
                                <label for="of_rankOverall" class="control-label span1">of</label>
                                <div class="span3">
                                    <input type="text" class="form-control span10" name="of_rankOverall" id="of_rankOverall" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="rankInRate" class="control-label span4">Rank In Rate</label>
                                <div class="span3">
                                    <input type="text" class="form-control span10" name="rankOverall" id="rankOverall" />
                                </div>
                                <label for="of_rankInRate" class="control-label span1">of</label>
                                <div class="span3">
                                    <input type="text" class="form-control span10" name="of_rankInRate" id="of_rankInRate" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="fitrep" class="control-label span4">GPA/Fitrep</label>
                                <div class="span3">
                                    <input type="text" class="form-control span10" name="fitrep" id="fitrep" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="training" class="control-label span4">For Training?</label>
                                <div class="span4">
                                    <select id="training" name="training" class="span11">
                                        <option value="T">Yes</option>
                                        <option value="F">No</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="span12 panel-body">
                    <div class="form-group">
                        <label for="notes" class="control-label span4">Notes:</label>
                        <div class="span8">
                            <form method="post" action="">
                                <textarea name="notes" id="notes" class="span11" rows="3" style="resize:vertical">Comments about performance...</textarea><br>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Buttons at buttom of page -->
    <div class="span4 panel-body">
        <form class="form-horizontal">
            <span class="text-left faux-p">
                <button>Create</button>
                <button>Cancel</button>
            </span>
        </form>
    </div>
</div>
